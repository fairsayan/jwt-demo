{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 16",

    "extends": "@tsconfig/node16/tsconfig.json",

    "exclude": ["test.ts", "**/tests/*"],

    "compilerOptions": {
        "experimentalDecorators": true,
        "outDir": "./build",
        "lib": ["es2020"],
        "module": "commonjs",
        "target": "es2020",
   
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    }  
  }